//				}
				 //TODO Auto-generated method stub
				try {
					Runtime.getRuntime().exec("service apache2 start");
				} catch (IOException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
				try {
					Runtime.getRuntime().exec("service mysql start");
